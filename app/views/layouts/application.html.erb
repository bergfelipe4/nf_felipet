  <body class="bg-light">
    <% if user_signed_in? %>
        <!-- üß≠ Sidebar -->
   <nav class="navbar navbar-expand-lg navbar-dark px-3" style="background:#0d1b2a;">
  <div class="container-fluid">

    <!-- Logo -->
    <a class="navbar-brand d-flex align-items-center" href="#">
      <i class="fa-solid fa-file-invoice-dollar text-warning fs-4 me-2"></i>
      <span>NF Emissor</span>
    </a>

    <!-- Bot√£o do menu no mobile -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>

    <!-- Itens -->
    <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="navbar-nav ms-auto">

        <!-- Dashboard -->
        <li class="nav-item me-2">
          <%= link_to authenticated_root_path, class: "btn btn-outline-light btn-sm d-flex align-items-center" do %>
            <i class="fa-solid fa-chart-line me-2"></i> Dashboard
          <% end %>
        </li>

        <!-- Emitir Nota -->
        <li class="nav-item me-2">
          <% if current_user.certificate_installed? %>
            <%= link_to new_notas_fiscai_path, class: "btn btn-outline-light btn-sm d-flex align-items-center" do %>
              <i class="fa-solid fa-file-circle-plus me-2"></i> Emitir Nota
            <% end %>
          <% else %>
            <button class="btn btn-outline-light btn-sm disabled d-flex align-items-center">
              <i class="fa-solid fa-file-circle-plus me-2"></i> Emitir Nota
            </button>
          <% end %>
        </li>

        <!-- Notas Emitidas -->
        <li class="nav-item me-2">
          <% if current_user.certificate_installed? %>
            <%= link_to notas_fiscais_path, class: "btn btn-outline-light btn-sm d-flex align-items-center" do %>
              <i class="fa-solid fa-folder-open me-2"></i> Notas Emitidas
            <% end %>
          <% else %>
            <button class="btn btn-outline-light btn-sm disabled d-flex align-items-center">
              <i class="fa-solid fa-folder-open me-2"></i> Notas Emitidas
            </button>
          <% end %>
        </li>

        <!-- Certificado -->
        <li class="nav-item me-2">
          <%= link_to new_certificate_path, class: "btn btn-outline-light btn-sm d-flex align-items-center" do %>
            <i class="fa-solid fa-shield-halved me-2"></i> Certificado
          <% end %>
        </li>

        <!-- Perfil -->
        <li class="nav-item me-2">
          <%= link_to edit_user_registration_path, class: "btn btn-outline-light btn-sm d-flex align-items-center" do %>
            <i class="fa-solid fa-user me-2"></i> Perfil
          <% end %>
        </li>

        <!-- Sair -->
        <li class="nav-item">
          <%= button_to destroy_user_session_path,
                method: :delete,
                class: "btn btn-outline-danger btn-sm d-flex align-items-center",
                form: { style: "display:inline;" } do %>
            <i class="fa-solid fa-right-from-bracket me-2"></i> Sair
          <% end %>
        </li>

      </ul>
    </div>

  </div>
