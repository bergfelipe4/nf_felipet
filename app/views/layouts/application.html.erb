        <!-- üìä Conte√∫do principal -->
        <main class="flex-grow-1 p-4">
          <% if notice %>
            <div class="alert alert-success"><%= notice %></div>
          <% end %>
          <% if alert %>
            <div class="alert alert-danger"><%= alert %></div>
          <% end %>

          <% if user_signed_in? && !current_user.certificate_installed? %>
            <div class="alert alert-warning d-flex justify-content-between align-items-center">
              <div>
                <strong>Certificado obrigat√≥rio!</strong>
                Configure o certificado digital para emitir e visualizar notas.
              </div>
              <%= link_to "Configurar", new_certificate_path, class: "btn btn-sm btn-primary" %>
            </div>
          <% end %>

          <%= yield %>
        </main>
    <% else %>
      <div class="container mt-5">
        <%= yield %>
      </div>
    <% end %>
