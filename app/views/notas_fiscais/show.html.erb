
<% cstat   = (@nota["CSTAT_AUTORIZAR"] || @nota["CSTAT_CONSULTA"]).to_i %>
<% motivo  = @nota["XMOTIVO_AUTORIZAR"] || @nota["XMOTIVO_CONSULTA"] || "—" %>
<% badge_class, icon, texto =
  if cstat.between?(100, 199)
    ["bg-success-subtle text-success-emphasis", "fa-check-circle", "Autorizada"]
  elsif cstat.between?(200, 299)
    ["bg-warning-subtle text-warning-emphasis", "fa-exclamation-circle", "Aviso"]
  elsif cstat.between?(300, 399)
    ["bg-danger-subtle text-danger-emphasis", "fa-times-circle", "Rejeitada"]
  elsif cstat.between?(400, 499)
    ["bg-secondary-subtle text-secondary-emphasis", "fa-ban", "Erro Genérico"]
  elsif cstat.between?(500, 599)
    ["bg-danger-subtle text-danger-emphasis", "fa-times-circle", "Rejeitada (Duplicidade/Validação)"]
  else
    ["bg-secondary-subtle text-secondary-emphasis", "fa-question-circle", "Desconhecido"]
  end
%>

