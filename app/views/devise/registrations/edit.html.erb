<h2 class="mb-4 fw-bold">Editar Perfil</h2>

<div class="card shadow-sm">
  <div class="card-body">

    <%= form_for(resource, as: resource_name,
                 url: user_registration_update_path,
                 html: { method: :put }) do |f| %>

      <% if resource.errors.any? %>
        <div class="alert alert-danger">
          <strong>Erros ao salvar:</strong>
          <ul class="mb-0">
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-semibold" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :cpf, "CPF", class: "form-label fw-semibold" %>
        <%= f.text_field :cpf, class: "form-control", placeholder: "000.000.000-00" %>
      </div>

      <div class="mb-3">
        <%= f.label :cnpj, "CNPJ", class: "form-label fw-semibold" %>
        <%= f.text_field :cnpj, class: "form-control", placeholder: "00.000.000/0000-00" %>
      </div>

      <hr class="my-4">

      <div class="mb-3">
        <%= f.label :password, "Nova senha", class: "form-label fw-semibold" %>
        <%= f.password_field :password, autocomplete: "new-password",
                             class: "form-control",
                             placeholder: "Deixe em branco para não alterar" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, "Confirmar nova senha", class: "form-label fw-semibold" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
                             class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, "Senha atual (obrigatória)", class: "form-label fw-semibold" %>
        <%= f.password_field :current_password, autocomplete: "current-password",
                             class: "form-control" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Salvar alterações",
                     class: "btn btn-outline-primary w-100 fw-semibold py-2" %>
      </div>

    <% end %>
  </div>
</div>
