
<h1 class="mb-4">
  <i class="fas fa-chart-line text-success me-2"></i>
  Dashboard
</h1>
<div class="card shadow-sm border-0 mb-4">
<div class="card-body">
<!-- Cards de resumo -->
<div class="row mb-4 g-4">
  <div class="col-md-3">
    <div class="card border-success shadow-sm h-100">
      <div class="card-body">
        <h6 class="text-success text-uppercase mb-2">
          <i class="fas fa-file-invoice-dollar me-1"></i> Notas Emitidas
        </h6>
        <h3 class="fw-bold text-dark">128</h3>
        <p class="text-muted mb-0">+12% vs mês anterior</p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-primary shadow-sm h-100">
      <div class="card-body">
        <h6 class="text-primary text-uppercase mb-2">
          <i class="fas fa-check-circle me-1"></i> Autorizadas
        </h6>
        <h3 class="fw-bold text-dark">115</h3>
        <p class="text-muted mb-0">Taxa de sucesso: 89%</p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-warning shadow-sm h-100">
      <div class="card-body">
        <h6 class="text-warning text-uppercase mb-2">
          <i class="fas fa-clock me-1"></i> Pendentes
        </h6>
        <h3 class="fw-bold text-dark">8</h3>
        <p class="text-muted mb-0">Aguardando retorno SEFAZ</p>
      </div>
    </div>
  </div>

  <div class="col-md-3">
    <div class="card border-danger shadow-sm h-100">
      <div class="card-body">
        <h6 class="text-danger text-uppercase mb-2">
          <i class="fas fa-times-circle me-1"></i> Canceladas
        </h6>
        <h3 class="fw-bold text-dark">5</h3>
        <p class="text-muted mb-0">Últimas 24 horas</p>
      </div>
    </div>
  </div>
</div>

<!-- Últimas Notas Fiscais -->
<div class="card shadow-sm">
  <div class="card-header bg-light d-flex justify-content-between align-items-center">
    <h5 class="mb-0">
      <i class="fas fa-file-alt me-2 text-secondary"></i>
      Últimas Notas Fiscais
    </h5>
    <%= link_to new_notas_fiscai_path, class: "btn btn-outline-success btn-sm d-flex align-items-center" do %>
      <i class="bi bi-plus-circle me-2 text-success"></i>
      Emitir Nova
    <% end %>
  </div>

  <div class="card-body p-0">
    <table class="table table-hover mb-0 align-middle">
      <thead class="table-light">
        <tr>
          <th>Número</th>
          <th>Série</th>
          <th>Data</th>
          <th>Status</th>
          <th class="text-end">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% notas_simuladas = [
          { numero: '1025', serie: '1', data: '10/11/2025 15:43', status: 'Autorizada' },
          { numero: '1024', serie: '1', data: '09/11/2025 09:32', status: 'Cancelada' },
          { numero: '1023', serie: '1', data: '09/11/2025 08:15', status: 'Pendente' }
        ] %>

        <% notas_simuladas.each do |nota| %>
          <tr>
            <td><%= nota[:numero] %></td>
            <td><%= nota[:serie] %></td>
            <td><%= nota[:data] %></td>
            <td>
              <% case nota[:status] %>
              <% when 'Autorizada' %>
                <span class="badge bg-success">
                  <i class="fas fa-check-circle me-1"></i> Autorizada
                </span>
              <% when 'Pendente' %>
                <span class="badge bg-warning text-dark">
                  <i class="fas fa-clock me-1"></i> Pendente
                </span>
              <% when 'Cancelada' %>
                <span class="badge bg-danger">
                  <i class="fas fa-times-circle me-1"></i> Cancelada
                </span>
              <% end %>
            </td>
            <td class="text-end">
              <%= link_to "#", class: "btn btn-sm btn-outline-primary me-1" do %>
                <i class="fas fa-eye"></i>
              <% end %>
              <%= link_to "#", class: "btn btn-sm btn-outline-secondary me-1" do %>
                <i class="fas fa-file-download"></i>
              <% end %>
              <%= link_to "#", class: "btn btn-sm btn-outline-danger" do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
</div>
</div>
