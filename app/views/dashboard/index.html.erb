    <h5 class="mb-0">
      <i class="fas fa-file-alt me-2 text-secondary"></i>
      Ãšltimas Notas Fiscais
    </h5>
    <%= link_to new_notas_fiscai_path, class: "btn btn-outline-success btn-sm d-flex align-items-center" do %>
      <i class="bi bi-plus-circle me-2 text-success"></i>
      Emitir Nova
    <% end %>
  </div>

  <div class="card-body p-0">
    <table class="table table-hover mb-0 align-middle">
      <thead class="table-light">
        <tr>
          <th>Chave</th>
          <th>SÃ©rie</th>
          <th>EmissÃ£o</th>
          <th>Status</th>
          <th class="text-end">AÃ§Ãµes</th>
        </tr>
      </thead>
   <tbody>
  <% if @notas_consulta.present? %>
    <% @notas_consulta.each do |nota| %>

      <% numero = nota["NNF"] || "â€”" %>
      <% serie  = nota["SERIE"] || "â€”" %>
      <% data   = format_datetime.call(nota["DT_INI"]) %>

      <% status_code  = nota["CSTAT_AUTORIZAR"] || nota["CSTAT_CONSULTA"] %>
      <% motivo       = nota["XMOTIVO_AUTORIZAR"] || nota["XMOTIVO_CONSULTA"] %>
      <% aprovado     = status_code.to_s.start_with?("1") %>

      <% badge_class = approved ? "bg-success" : "bg-warning text-dark" %>
      <% status_text = motivo || "â€”" %>

      <tr>
        <td><%= numero %></td>
        <td><%= serie %></td>
        <td><%= data %></td>

        <td>
          <% if approved %>
            <span class="badge bg-success">
              <i class="fas fa-check-circle me-1"></i> <%= status_text %>
            </span>
          <% else %>
            <span class="badge bg-warning text-dark">
              <i class="fas fa-exclamation-circle me-1"></i> <%= status_text %>
